<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeaponForger.Views.MenuView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" FontSize="30" HorizontalOptions="Center" Text="Weapon Forge" />
        <Button Grid.Row="1" Text="New Weapon" Command="{Binding NewCommand}" />
        <Button Grid.Row="2" Text="Reforge Weapon" Command="{Binding ReforgeCommand}" />
        <Button Grid.Row="3" Text="Test Weapon" Command="{Binding TestCommand}"/>
    </Grid>
</ContentPage>